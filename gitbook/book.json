    "pluginsConfig": {
        "code": {
            "copyButtons": true
        },
        "prism": {
            "css": [
                "prismjs/themes/prism-okaidia.css"
            ]
        },
        "page-copyright": {
          "description": "modified at",
          "signature": "EXP",
          "wisdom": "Designer, Frontend Developer & overall web enthusiast",
          "format": "YYYY-MM-dd hh:mm:ss",
          "copyright": "Copyright &#169; EXP",
          "timeColor": "#666",
          "copyrightColor": "#666",
          "utcOffset": "8",
          "style": "normal",
          "noPowered": false
        },
        "tbfed-pagefooter": {
            "copyright":"Copyright &copy EXP 2019",
            "modify_label": "本书发布时间：",
            "modify_format": "YYYY-MM-DD HH:mm:ss"
        },
        "donate": {
            "title": "",
            "button": "打赏",
            "alipay": "img/donate/alipay.png",
            "alipayText": "支付宝",
            "wechat": "img/donate/wechat.png",
            "wechatText": "微信"
        },
        "simple-page-toc": {
            "maxDepth": 3,
            "skipFirstH1": true
        },
        "anchor-navigation-ex": {
            "isRewritePageTitle": false,
            "isShowTocTitleIcon": true,
            "tocLevel1Icon": "fa fa-hand-o-right",
            "tocLevel2Icon": "fa fa-hand-o-right",
            "tocLevel3Icon": "fa fa-hand-o-right"
        },
        "sharing": {
            "facebook": true,
            "twitter": true,
            "weibo": true,
            "qq": true,
            "all": [
                "douban", "google", "instapaper", "linkedin", "twitter", "messenger", "qzone", "viber", "whatsapp"
            ]
        },
        "image-captions": {
            "comment": "图片注解格式",
            "caption": "Image _PAGE_LEVEL_._PAGE_IMAGE_NUMBER_ - _CAPTION_"
        },
        "theme-default": {
            "comment": "是否显示章节序号",
            "showLevel": false
        },
        "edit-link": {
            "base": "https://github.com/lyy289065406/exp-blog/edit/master/gitbook",
